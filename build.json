{
  "builders": [
    {
      "communicator": "ssh",
      "source_path": "hashicorp/bionic64",
      "provider": "virtualbox",
      "type": "vagrant",
      "box_name": "steinwurf-mininet",
      "output_dir": "build/box"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "setup.sh"
      ],
      "execute_command": "echo 'mininet' | sudo -S sh '{{ .Path }}'",
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant-cloud",
      "box_tag": "hashicorp/precise64",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `version`}}"
    }
  ]
}