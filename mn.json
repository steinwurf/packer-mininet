{
  "variables": {
   "ovf": ""
  },
  "builders": [
  {
    "type": "virtualbox-ovf",
    "vm_name": "steinwurf-mininet",
    "source_path": "{{user `ovf`}}",
    "ssh_username": "mininet",
    "ssh_password": "mininet",
    "ssh_wait_timeout": "60s",
    "shutdown_command": "echo 'mininet' | sudo -S shutdown -P now",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version"
  }],
  "provisioners": [
  {
    "scripts": [
      "setup.sh"
    ],
    "execute_command": "echo 'mininet' | sudo -S sh '{{ .Path }}'",
    "type": "shell"
  }],
  "post-processors": [
    {"type": "vagrant",
     "output": "steinwurf-mininet-{{.BuildName}}.box"
    }
  ]
}
